<Window x:Class="_122_Chaban_Aleksandra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_122_Chaban_Aleksandra"
        mc:Ignorable="d"
        Loaded="Window_Loaded" 
        Closing="Window_Closing"
        Title="ООО Банк" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>


        <Button x:Name="BackButton"
                Content="Назад"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10,0,0,0"
                Width="80" Height="30" Click="BackButton_Click"/>



        <ComboBox x:Name="StyleComboBox" HorizontalAlignment="Left"
                  SelectionChanged="StyleComboBox_SelectionChanged"
                  VerticalAlignment="Center"
                  Margin="392,0,0,0"
                  Width="200" Height="30" Grid.Column="1" >
            <ComboBoxItem Content="Стиль 1" Tag="Dictionary1"/>
            <ComboBoxItem Content="Стиль 2" Tag="Dictionary2"/>
        </ComboBox>

        <Frame x:Name="MainFrame" Grid.Row="1" Source="Pages/AuthPage.xaml"
               NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"  />

        <TextBlock x:Name="DateTimeNow"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   Margin="418,0,0,0"
                   VerticalAlignment="Center"
                   Height="35" Width="194" Grid.Column="1"/>
        
    </Grid>
</Window>
